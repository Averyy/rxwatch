{
  "name": "rxwatch",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 5000",
    "build": "next build",
    "start": "next start -p 5000",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "db:start": "docker volume create rxwatch_postgres_data 2>/dev/null || true && docker compose up -d",
    "db:stop": "docker compose down",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:dump": "docker exec rxwatch-db pg_dump -U rxwatch rxwatch > db/dumps/rxwatch-$(date +%Y%m%d-%H%M%S).sql",
    "db:restore": "docker exec -i rxwatch-db psql -U rxwatch rxwatch < ",
    "db:reset": "docker compose down && docker volume rm rxwatch_postgres_data 2>/dev/null || true && docker volume create rxwatch_postgres_data && docker compose up -d"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.23.26",
    "geist": "^1.5.1",
    "lucide-react": "^0.562.0",
    "next": "15",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "2.15.4",
    "shadcn": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  }
}
